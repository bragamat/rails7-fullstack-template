<%= f.label field, class: 'text-sm font-medium' %><br />


<% if type == :password%>
<%= f.password_field field, placeholder: placeholder,
  class: "block w-full rounded-lg border border-gray-200 px-5 py-3 leading-6
    placeholder-gray-500 focus:border-indigo-500 focus:ring focus:ring-indigo-500/50
    dark:border-gray-600 dark:bg-gray-800 dark:placeholder-gray-400
    dark:focus:border-indigo-500 "%>

<% else %>



<%= f.email_field field, placeholder: placeholder,
  class: "block w-full rounded-lg border border-gray-200 px-5 py-3 leading-6
    placeholder-gray-500 focus:border-indigo-500 focus:ring focus:ring-indigo-500/50
    dark:border-gray-600 dark:bg-gray-800 dark:placeholder-gray-400
    dark:focus:border-indigo-500 "%>
<% end %>
